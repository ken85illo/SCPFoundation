@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center text-white d-flex flex-column align-items-center">
    <h1 class="display-2 jb-mono fw-bolder">ITEM ARCHIVE</h1>
    <div id="restricted-access" class="fs-5 mb-2">
        <hr class="text-danger">
        <div class="text-danger jb-mono mb-3"><span style="letter-spacing: 6px;">RESTRICTED ACCESS</span></div>
    </div>
    <div class="text-grey jb-mono fs-6" style="width: 600px">AUTHORIZED CLEARANCE LEVEL 4+ REQUIRED FOR DETAILED
        DOSSIER
        ACCESS.
        DISSEMINATION OF
        CONTAINMENT DATA TO
        UNAUTHORIZED PERSONNEL IS GROUNDS FOR IMMEDIATE TERMINATION</div>

    <div id="filter-container" class="mt-5 px-5 py-4 d-flex align-items-center gap-5 text-start jb-mono text-grey">
        <div>
            <div class="fw-bold fs-5 mb-2">FILTER PROTOCOL</div>
            <div class="d-flex fs-6 gap-2">
                <div class="protocol-card d-flex align-items-center">
                    CACHE_LOAD: 100%
                </div>
                <div class="text-success protocol-card d-flex align-items-center">
                    CONNECTION: STABLE
                </div>
                <div class="protocol-card d-flex align-items-center">
                    99 FILES LOADED
                </div>

            </div>
        </div>

        <div class="flex-shrink-1 flex-grow-1">
            <div class="fw-bold mb-2">QUERY ID/DESIGNATION</div>
            <input placeholder="INPUT DATA..." type="search" class="text-uppercase" style="width: 100%;">
        </div>
        <div class="flex-shrink-1 flex-grow-1">
            <div class="fw-bold mb-2">CLASSIFICATION</div>
            <select style="width: 100%;">
                <option>ALL CLASSIFICATIONS</option>
                <option>SAFE</option>
                <option>EUCLID</option>
                <option>KETER</option>
            </select>
        </div>

    </div>
</div>
